<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.itbeebd.cesc_nsl">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".utils.SugarOrmApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CESC_nsl"
        android:usesCleartextTraffic="true"
        tools:ignore="LockedOrientationActivity">

        <activity android:name=".activities.teacher.TeacherDashboardActivity"/>
        <activity android:name=".activities.student.LibraryBookActivity" />
        <activity android:name=".activities.student.DuePaymentCheckOutActivity" />
        <activity android:name=".activities.student.EditStudentProfileActivity" />
        <activity android:name=".activities.student.PaymentHistoryActivity" />
        <activity android:name=".activities.student.LessonPlanActivity" />
        <activity android:name=".activities.student.StudentAllNotificationActivity" />

        <activity
            android:name=".activities.student.StudentDashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- these are sugar orm settings -->
        <meta-data
            android:name="DATABASE"
            android:value="cesc_nsl.db" />
        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.itbeebd.cesc_nsl.sugarClass" />
    </application>

</manifest>