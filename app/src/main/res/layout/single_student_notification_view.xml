<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white_inactive"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:elevation="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@color/orange_active"
            app:layout_constraintBottom_toBottomOf="@+id/notificationBodyId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/notificationTitleId" />

        <TextView
            android:id="@+id/notificationTitleId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="4dp"
            android:text="Notification Title"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <com.abdulhakeem.seemoretextview.SeeMoreTextView
            android:id="@+id/notificationBodyId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="body"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/notificationTitleId"
            app:layout_constraintStart_toStartOf="@+id/notificationTitleId"
            app:layout_constraintTop_toBottomOf="@+id/notificationTitleId" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>