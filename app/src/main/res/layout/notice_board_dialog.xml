<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/contentTypeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_active"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:letterSpacing="0.5"
            android:padding="10dp"
            android:text="NOTICE"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/noticeTitleId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <View
            android:id="@+id/closeDialogId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_cancel"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/contentTypeId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/contentTypeId" />


        <TextView
            android:id="@+id/noticeTitleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:text="NOTICE"
            android:textStyle="bold"
            android:textColor="@color/primary_active"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/noticeBodyId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentTypeId" />

        <TextView
            android:id="@+id/noticeBodyId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:linksClickable="true"
            android:padding="10dp"
            android:text="NOTICE"
            android:textColorLink="@color/blue_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noticeTitleId" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>